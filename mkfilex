#!/usr/bin/env bash

set -xe

cs:
  pnpm changeset

t:
  pnpm run test

b:
  pnpm run build

d:
  pnpm run dev

docs/:
  pushd apps/docs
  d:
    pnpm run dev
  c:
    pnpm run check
  b:
    pnpm run build
  popd

app/:
  pushd apps/web
  d:
    pnpm run dev
  c:
    pnpm run check
  b:
    pnpm run build
  popd

w/:
  pushd web
  d:
    pnpm run dev
  c:
    pnpm run check
  popd

c/:
  pushd packages/core
  b:
    pnpm run build
  t:
    pnpm run test
  popd

x/:
  pushd packages/block-to-xlsx
  b:
    pnpm run build
  t:
    pnpm run test
  popd

h:
  mk -P targets "*"
